{
    "name": "tweetclip",
    "description": "Get screenshots of tweets with just the link",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "tabs",
        "storage",
        "activeTab",
        "contextMenus",
        "notifications"
    ],
    "host_permissions": ["http://*/"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/16x16.png",
            "19": "/images/19x19.png",
            "38": "/images/38x38.png",
            "48": "/images/48x48.png",
            "128": "/images/128x128.png"
        }
    },
    "icons": {
        "16": "/images/16x16.png",
        "19": "/images/19x19.png",
        "38": "/images/38x38.png",
        "48": "/images/48x48.png",
        "128": "/images/128x128.png"
    }
}
